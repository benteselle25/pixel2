// Select color input
let color = document.querySelector('#colorPicker');

// Select size input
let myTable = document.getElementById('pixelCanvas');
let r = document.querySelector('#inputHeight').value;
let c = document.querySelector('#inputWidth').value;
// When size is submitted by the user, call makeGrid()

function makeGrid(r, c) {
    const submit = document.querySelector('#submitButton');

    submit.addEventListener('click', function makeGrid(event){
    
    const gridHeight = document.querySelector('#inputHeight').value;
    
    const gridWidth = document.querySelector('#inputWidth').value;
    
    event.preventDefault();
    
    console.log("user submitted dims");
    
    for (r = 0; r < gridHeight; r++) {
    
        const addRow = document.querySelector('#pixelCanvas').insertRow(r);
    
    for (c = 0; c < gridWidth; c++) {
    
        const addColumn = document.querySelector('#pixelCanvas').insertColumn(c);
    
    }
    
    }
    
    }

}
